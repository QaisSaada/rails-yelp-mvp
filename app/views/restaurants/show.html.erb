<p style="color: green"><%= notice %></p>

<%= render @restaurant %>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= review.rating %>
      <%= "stars" %>
    </li>
  <% end %>
</ul>
    <br>

<%= link_to "Create new review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %>
  <br>
      <br>



<div>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-warning" %>
  <br>
    <br>


  <%= button_to "Destroy this restaurant", @restaurant, method: :delete, class: "btn btn-warning" %>
</div>



